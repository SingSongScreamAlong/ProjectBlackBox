# ProjectBlackBox Production Environment Configuration
# Copy this file to .env for production deployment

# ============================================================================
# ENVIRONMENT
# ============================================================================
NODE_ENV=production

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
PORT=3000
SERVER_URL=https://your-domain.com
BACKEND_URL=https://your-domain.com/api
RELAY_AGENT_URL=wss://your-domain.com/relay
DASHBOARD_URL=https://dashboard.your-domain.com

# ============================================================================
# SECURITY (CRITICAL - GENERATE STRONG SECRETS)
# ============================================================================
# Generate with: openssl rand -hex 32
JWT_SECRET=REPLACE_WITH_STRONG_SECRET_MIN_32_CHARS
API_KEY=REPLACE_WITH_STRONG_API_KEY
SERVICE_TOKEN=REPLACE_WITH_STRONG_SERVICE_TOKEN

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=postgresql://user:password@host:5432/blackbox
PG_CONNECTION_STRING=postgresql://user:password@host:5432/blackbox

# ============================================================================
# AI SERVICES
# ============================================================================
OPENAI_API_KEY=sk-your-openai-key-here
GRADIENT_AI_API_KEY=your-gradient-ai-key-here
ELEVENLABS_API_KEY=your-elevenlabs-key-here

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_AI_COACHING=true
ENABLE_VOICE_SYNTHESIS=true
ENABLE_VIDEO_STREAMING=true
ENABLE_TELEMETRY_RELAY=true

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=https://your-domain.com,https://dashboard.your-domain.com

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=info

# ============================================================================
# VIDEO CONFIGURATION
# ============================================================================
VIDEO_BITRATE=2500
VIDEO_FPS=30
VIDEO_WIDTH=1280
VIDEO_HEIGHT=720

# ============================================================================
# TELEMETRY CONFIGURATION
# ============================================================================
TELEMETRY_BATCH_SIZE=10
TELEMETRY_SEND_INTERVAL=1.0

# ============================================================================
# RELAY AGENT
# ============================================================================
RELAY_AGENT_PORT=8765
RELAY_AGENT_HOST=0.0.0.0

# ============================================================================
# DASHBOARD (React App - use REACT_APP_ prefix)
# ============================================================================
REACT_APP_BACKEND_URL=https://your-domain.com/api
REACT_APP_WEBSOCKET_URL=wss://your-domain.com/relay
REACT_APP_RELAY_AGENT_URL=wss://your-domain.com/relay
REACT_APP_ENABLE_AI_COACHING=true
REACT_APP_ENABLE_VOICE_SYNTHESIS=true
REACT_APP_ENABLE_3D_VISUALIZATION=true
REACT_APP_THEME=dark
REACT_APP_REFRESH_INTERVAL_MS=1000

# ============================================================================
# SECURITY NOTES
# ============================================================================
# 1. NEVER commit this file with real secrets to git
# 2. Use strong, cryptographically random secrets
# 3. Rotate secrets regularly
# 4. Use different secrets for each environment
# 5. Store production secrets in a secure vault (AWS Secrets Manager, etc.)
