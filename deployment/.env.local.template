# BlackBox Local Development Environment Configuration Template
# Copy this file to .env for local development

# ==============================================
# LOCAL SERVICES
# ==============================================

# Backend Engine
BACKEND_PORT=3000
BACKEND_URL=http://localhost:3000

# AI Agent
AI_AGENT_PORT=3001
AI_AGENT_URL=http://localhost:3001

# Relay Agent
RELAY_AGENT_PORT=8765
RELAY_AGENT_URL=ws://localhost:8765

# Dashboard
DASHBOARD_PORT=3002
DASHBOARD_URL=http://localhost:3002

# ==============================================
# AI SERVICES
# ==============================================

# OpenAI (for driver coaching and STT)
OPENAI_API_KEY=your_openai_key_here
AI_MODEL=gpt-3.5-turbo
AI_TEMPERATURE=0.2
AI_MAX_TOKENS=1024

# ElevenLabs (for voice coaching) - Optional for local dev
ELEVENLABS_API_KEY=your_elevenlabs_key_here
ELEVENLABS_VOICE_ID=default
ELEVENLABS_MODEL=eleven_multilingual_v2

# ==============================================
# SECURITY & AUTHENTICATION
# ==============================================

# For local development - use simple values
JWT_SECRET=local_development_jwt_secret_change_in_production
API_KEY=local_development_api_key_change_in_production
SESSION_SECRET=local_development_session_secret

# ==============================================
# DATABASE (Local)
# ==============================================

DB_PASSWORD=blackbox_local_dev
DATABASE_URL=postgresql://blackbox:blackbox_local_dev@localhost:5432/blackbox
DB_HOST=localhost
DB_PORT=5432
DB_NAME=blackbox
DB_USER=blackbox

# ==============================================
# FEATURE FLAGS
# ==============================================

TELEMETRY_ENABLED=true
VIDEO_ENABLED=true
AI_COACHING_ENABLED=true
VOICE_ENABLED=false
AUTO_UPDATE=false

# Rate limiting (relaxed for local dev)
API_KEY_REQUIRED=false
RATE_LIMIT_ENABLED=false

# ==============================================
# VIDEO SETTINGS
# ==============================================

VIDEO_QUALITY=low
VIDEO_RESOLUTION=640x480
VIDEO_FRAME_RATE=15
VIDEO_ENCODER=h264
VIDEO_MAX_BITRATE=1000
VIDEO_USE_HARDWARE_ACCEL=false

# ==============================================
# LOGGING
# ==============================================

LOG_LEVEL=debug
NODE_ENV=development

# ==============================================
# CORS (Allow all for local dev)
# ==============================================

ALLOWED_ORIGINS=*
CORS_ENABLED=true

# ==============================================
# LOCAL PATHS
# ==============================================

DATA_DIR=./data
LOGS_DIR=./logs
TEMP_DIR=./temp
