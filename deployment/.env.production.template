# BlackBox Production Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ==============================================
# CLOUD INFRASTRUCTURE
# ==============================================

# DigitalOcean
DO_API_TOKEN=your_digitalocean_api_token_here
DO_APP_ID=
DO_REGION=nyc1
DROPLET_IP=your_droplet_ip_here
DOMAIN=your_domain.com
SUBDOMAIN=blackbox

# ==============================================
# AI SERVICES
# ==============================================

# GradientAI / OpenAI (for driver coaching)
GRADIENT_AI_API_KEY=your_gradient_ai_key_here
OPENAI_API_KEY=your_openai_key_here
AI_MODEL=gpt-4
AI_TEMPERATURE=0.2
AI_MAX_TOKENS=1024

# ElevenLabs (for voice coaching)
ELEVENLABS_API_KEY=your_elevenlabs_key_here
ELEVENLABS_VOICE_ID=default
ELEVENLABS_MODEL=eleven_multilingual_v2

# ==============================================
# SECURITY & AUTHENTICATION
# ==============================================

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET=your_secure_jwt_secret_here

# API Keys (generate with: openssl rand -hex 16)
API_KEY=your_secure_api_key_here

# Database Password (generate with: openssl rand -base64 24)
DB_PASSWORD=your_secure_db_password_here

# ==============================================
# DATABASE
# ==============================================

DATABASE_URL=postgresql://blackbox:${DB_PASSWORD}@postgres:5432/blackbox
DB_HOST=postgres
DB_PORT=5432
DB_NAME=blackbox
DB_USER=blackbox

# ==============================================
# BACKEND SERVICES
# ==============================================

# Backend Engine
BACKEND_PORT=3000
BACKEND_URL=https://${SUBDOMAIN}.${DOMAIN}

# AI Agent
AI_AGENT_PORT=3001
AI_AGENT_URL=https://${SUBDOMAIN}.${DOMAIN}/ai

# Relay Agent
RELAY_AGENT_PORT=8765
RELAY_AGENT_URL=wss://${SUBDOMAIN}.${DOMAIN}/relay

# ==============================================
# FEATURE FLAGS
# ==============================================

# Enable/disable features
TELEMETRY_ENABLED=true
VIDEO_ENABLED=true
AI_COACHING_ENABLED=true
VOICE_ENABLED=true
AUTO_UPDATE=true

# Rate limiting
API_KEY_REQUIRED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60

# ==============================================
# VIDEO SETTINGS
# ==============================================

VIDEO_QUALITY=medium
VIDEO_RESOLUTION=1280x720
VIDEO_FRAME_RATE=30
VIDEO_ENCODER=h264
VIDEO_MAX_BITRATE=2000
VIDEO_USE_HARDWARE_ACCEL=true

# ==============================================
# LOGGING & MONITORING
# ==============================================

LOG_LEVEL=info
NODE_ENV=production

# ==============================================
# CORS & NETWORKING
# ==============================================

ALLOWED_ORIGINS=https://${SUBDOMAIN}.${DOMAIN},https://www.${SUBDOMAIN}.${DOMAIN}
CORS_ENABLED=true

# ==============================================
# SESSION & CACHE
# ==============================================

SESSION_SECRET=your_session_secret_here
CACHE_TTL=300
CACHE_MAX_SIZE_MB=100

# ==============================================
# TEAM FEATURES
# ==============================================

# Team configuration
TEAM_ID=
USER_ID=
TEAM_NAME=

# ==============================================
# NOTIFICATIONS
# ==============================================

# Email notifications (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

# ==============================================
# RESOURCE LIMITS
# ==============================================

MAX_CPU_PERCENT=80
MAX_MEMORY_MB=2048
MAX_GPU_PERCENT=50

# ==============================================
# BACKUP & STORAGE
# ==============================================

# S3-compatible storage (optional)
S3_BUCKET=
S3_REGION=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_ENDPOINT=

# Local storage paths
DATA_DIR=/opt/blackbox/data
LOGS_DIR=/opt/blackbox/logs
TEMP_DIR=/opt/blackbox/temp
