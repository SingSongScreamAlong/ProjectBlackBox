# BlackBox DigitalOcean Deployment Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control

# Database Configuration
POSTGRES_DB=blackbox
POSTGRES_USER=blackbox
POSTGRES_PASSWORD=generate_secure_random_password_here
DATABASE_URL=postgresql://blackbox:your_password@postgres:5432/blackbox

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
GRADIENT_AI_API_KEY=your_gradient_ai_api_key_here

# Security
JWT_SECRET=generate_secure_random_secret_here

# DigitalOcean Configuration
DO_API_TOKEN=your_digitalocean_api_token_here
DO_APP_ID=your_app_id_after_first_deployment
DO_REGION=nyc3
DOMAIN=your_domain.com
SUBDOMAIN=blackbox

# Application URLs (update after deployment)
REACT_APP_API_URL=http://your-droplet-ip:3000/api
REACT_APP_WS_URL=ws://your-droplet-ip:3000/ws

# Node Environment
NODE_ENV=production
