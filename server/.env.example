# Database Configuration
# Copy to .env and set your connection string
# For local dev with Postgres/Timescale running on default port
PG_CONNECTION_STRING=postgres://postgres:postgres@localhost:5432/blackbox_telemetry
# Alternative: DATABASE_URL=postgres://postgres:postgres@localhost:5432/blackbox_telemetry

# JWT Configuration (REQUIRED - Change this in production!)
JWT_SECRET=your-super-secure-jwt-secret-here-change-this-in-production

# Server Configuration
PORT=4000
NODE_ENV=development

# Database Connection Pool Settings
PG_CONN_TIMEOUT_MS=5000
PG_IDLE_TIMEOUT_MS=30000
PG_POOL_MAX=10
PG_STMT_TIMEOUT_MS=15000

# AI Service Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# CORS Configuration (restrict in production)
CORS_ORIGIN=*

# Logging Configuration
LOG_LEVEL=info
