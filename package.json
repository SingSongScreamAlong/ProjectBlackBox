{
  "name": "pitbox-driver-app",
  "version": "0.1.0",
  "description": "PitBox Driver App - Lightweight telemetry collector for sim racing",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron-forge start",
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "generate-icons": "electron-icon-maker --input=./assets/icon.svg --output=./assets",
    "validate:hybrid-cloud": "node ./deployment/validate-hybrid-cloud.js"
  },
  "author": "PitBox Racing",
  "license": "MIT",
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "socket.io-client": "^4.8.1",
    "uuid": "^9.0.0"
  },
  "optionalDependencies": {
    "node-irsdk": "^2.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.1.1",
    "@electron-forge/maker-deb": "^6.1.1",
    "@electron-forge/maker-rpm": "^6.1.1",
    "@electron-forge/maker-squirrel": "^6.1.1",
    "@electron-forge/maker-zip": "^6.1.1",
    "@types/node": "^18.16.0",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "electron": "^24.1.3",
    "electron-icon-maker": "^0.0.5",
    "eslint": "^8.39.0",
    "typescript": "^5.0.4"
  }
}
